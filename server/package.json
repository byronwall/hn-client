{
  "name": "hn-node",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "server": "nodemon -e ts,js --watch '*.ts' --exec \"ts-node src/index.ts\"",
    "client": "cd ../client && yarn start",
    "dev": "concurrently \"yarn server\" \"yarn client\"",
    "start": "node build/index.js",
    "build": "yarn && tsc && cd ../client && yarn deploy",
    "build_run": "tsc && yarn start",
    "deploy-copy": "rsync -rvzq --include='build/***' --include='node_modules/***' --include='package.json' --exclude='*' ./ root@byroni.us:/root/hn-client",
    "deploy": "yarn build && yarn deploy-copy"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.4",
    "@types/express": "^4.11.1",
    "@types/firebase": "^3.2.1",
    "@types/node": "^8.0.47",
    "@types/request-promise": "^4.1.41",
    "concurrently": "^4.1.0",
    "nodemon": "^1.17.2",
    "ts-node": "^7.0.1",
    "typescript": "^2.5.3"
  },
  "dependencies": {
    "@types/debug": "^4.1.5",
    "compression": "^1.7.2",
    "cors": "^2.8.5",
    "debug": "^4.3.1",
    "dotenv": "^8.2.0",
    "express": "^4.16.3",
    "firebase": "^4.11.0",
    "request-promise": "^4.2.2"
  }
}
