{
  "name": "hn-node",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "server": "nodemon -e ts,js --watch '*.ts' --exec \"DEBUG=hn:* ts-node src/index.ts\"",
    "client": "cd ../client && npm run start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "start": "node build/index.js",
    "build": "npm install && tsc && cd ../client && npm run deploy",
    "build_run": "tsc && npm run start",
    "deploy-copy": "rsync -rvzq --include='build/***' --include='node_modules/***' --include='package.json' --exclude='*' ./ root@byroni.us:/root/hn-client",
    "deploy": "npm run build && npm run deploy-copy"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.9",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.9",
    "@types/firebase": "^3.2.1",
    "@types/node": "^14.14.20",
    "@types/request-promise": "^4.1.47",
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.7",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "debug": "^4.3.1",
    "dotenv": "^8.2.0",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "firebase": "^8.2.2",
    "request": "^2.88.2",
    "request-promise": "^4.2.6"
  }
}
